#!/usr/bin/env bash
set -euo pipefail

CMD=${1:-bin/eksler}
export REGION=$2
export CLUSTER_NAME=$3
mode=${4:-ensure}
configurations=${*:5}
[ "$configurations" = "" ] && configurations="\
  cluster-2-8-6-2-9 \
  prometheus-2-8-6-1-2 \
  bot-4-8-6-2-4 bot-8-16-6-0-450 bot-16-32-6-0-450 bot-32-64-6-0-450 bot-48-64-6-0-450 bot-96-128-6-0-450"

for configuration in $configurations; do
  name=${configuration%%-*}
  resources=${configuration#*-}
  IFS=- read -r cpus mem disk_size min max <<< "$resources"

  labels="$name=yes"

  label_opts=""
  for label in $labels; do
    label_opts="$label_opts --label=$label"
  done

  # NOTE: --memory is --memory-min internally
  (
    "$CMD" managednodegroup "$mode" "$REGION" "$CLUSTER_NAME" "$configuration" \
      --class=spot \
      --vcpus="$cpus" --memory="$mem" --volume-size="$disk_size" \
      --min-size="$min" --max-size="$max" \
      $label_opts
  ) 2>&1 | sed -le "s#^#$configuration: #;" &
done

wait

echo "test-nodes: OK"
