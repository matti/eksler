#!/usr/bin/env bash
set -euo pipefail
. functions.sh

name=$1
region=$2
cluster_name=$3
generation=$4

case "${name}" in
  x-1-pre)
    bin/ekslerpooler create "${region}" "${cluster_name}" $generation $name \
      --min-size=2 --max-size=32 \
      --instance-selector-vcpus=2 --instance-selector-memory=2 \
      --volume-size=8 \
      --label=autoscaler=yes \
      --label=ingress=yes \
      --label=prometheus=yes \
      --label=awslb=yes
  ;;
  all-1-pre)
    bin/ekslerpooler create "${region}" "${cluster_name}" $generation $name \
      --min-size=1 --max-size=9 \
      --instance-selector-vcpus=2 --instance-selector-memory=2 \
      --volume-size=8 \
      --label=others=yes
  ;;
  super-1-pre)
    bin/ekslerpooler create "${region}" "${cluster_name}" $generation $name \
      --min-size=0 --max-size=32 \
      --instance-selector-vcpus=32 --instance-selector-memory=64 \
      --volume-size=16 \
      --label=preemptible=yes \
      --label=regular=yes \
      --label=bot=yes \
      --label=workload=yes \
      --label=cluster=yes \
      --label=cluster_name=$cluster_name \
      --label=region_name=aws
  ;;
  *)
    _err "unknown pool: $name"
  ;;
esac